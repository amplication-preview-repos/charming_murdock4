datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Brand {
  branches  Branch[]
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  name      String?
  updatedAt DateTime @updatedAt
}

model Points {
  branch    Branch?  @relation(fields: [branchId], references: [id])
  branchId  String?
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  points    Int?
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model Branch {
  brand       Brand?   @relation(fields: [brandId], references: [id])
  brandId     String?
  createdAt   DateTime @default(now())
  id          String   @id @default(cuid())
  name        String?
  pointsItems Points[]
  updatedAt   DateTime @updatedAt
}

model User {
  createdAt   DateTime @default(now())
  email       String?  @unique
  firstName   String?
  id          String   @id @default(cuid())
  lastName    String?
  password    String
  pointsItems Points[]
  roles       Json
  updatedAt   DateTime @updatedAt
  username    String   @unique
}
